extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Gaji
			
		ol.breadcrumb 
			
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Gaji
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/gaji/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama
									input(type='text',value="#{data.nama}",name ='nama',placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Gaji Bersih
									input(type='text',value="#{ (gajibersih == undefined) ? data.gajibersih : gajibersih }",name='gajibersih',placeholder='Enter Gaji Bersih').form-control
								.form-group
									label
										| Gaji Bonus
									input(type='text',value="#{ (gajibonus == undefined) ? data.gajibonus : gajibonus }",name='gajibonus',placeholder='Enter Gaji Bonus').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/gaji').btn.btn-primary.pull-right
									| Back