extends ../layout/base
block content
    section.content-header
        h1
            | Add Gaji
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Gaji
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/gaji/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Name
                                    input(type='text',value='#{nama}',name='nama',placeholder='Enter Name', autofocus).form-control
                                .form-group
                                    label
                                        | Gaji Bersih
                                    input(type='text',name='gajibersih',placeholder='Enter Gaji Bersih').form-control
                                .form-group
                                    label
                                        | Gaji Bonus
                                    input(type='text',value='#{gajibonus}',name='gajibonus',placeholder='Enter Gaji Bonus').form-control
                                
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/customers').btn.btn-primary.pull-right
                                    | Back